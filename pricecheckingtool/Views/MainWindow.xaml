<Window x:Class="pricecheckingtool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Views="clr-namespace:pricecheckingtool.Views"
        xmlns:ViewModels="clr-namespace:pricecheckingtool.ViewModels"
        mc:Ignorable="d"
        Title="Overview" Height="600" Width="800">

    <Grid>
        <StackPanel>
            <Views:UserInformationView Margin="5"/>
            <DockPanel Margin="5" Height="450">
                <Views:UserStashTabView Width="200"/>
                <Views:StashTabOverview Width="500"/>
            </DockPanel>
        </StackPanel>
    </Grid>
   
</Window>
